<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="520"/>

        <Button x:Name="startButton" Content="Démarrer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="startButton_Click" BorderBrush="{x:Null}" Background="{x:Null}" Margin="4,1,0,0"/>
        <Button x:Name="stopButton" Content="Supression" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="startButton_Click" BorderBrush="{x:Null}" Background="{x:Null}" Margin="91,1,0,0"/>
        <Button x:Name="hideButton" Content="Masquer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="startButton_Click" BorderBrush="{x:Null}" Background="{x:Null}" Margin="179,1,0,0"/>
        <Button x:Name="quitButton" Content="Quiter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="startButton_Click" BorderBrush="{x:Null}" Background="{x:Null}" Margin="259,1,0,0"/>

    </Grid>
</Window>
